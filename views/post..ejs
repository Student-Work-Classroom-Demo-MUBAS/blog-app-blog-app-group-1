<%- include ('partials/header') %>
  <%- include('partials/navigation') %>

  <article class="full-post">
    <h2><%= post.title %></h2>
    <p class="post-meta"><i class="far fa calendar"></i><%= post.createdAt.toDateString() %></p>
    
    <div class="post-content">
      <!-- check here for image -->
      <img src="<%= post.imageUrl ? post.imageUrl : '/images/default.jpg' %>" alt="<%= post.title %>">
      <p><%= post.content %></p>
    </div>

    <div class="post-image">
      <% if (post.imageUrl) { %>  
        <img src="<%= post.imageUrl %>" alt="<%= post.title %>">
      <% } else { %>  
        <img src="/images/default.jpg" alt="Default Post Image">
      <% } %>
    </div>

    <div class="post-content">
      <%= post.content.replace(/\n/g, '<br>') %><
    </div>

    <div class="post-actions">
      <a href ="/" class = "btn secondary"><i class="fas fa-arrow-left"></i>Back to Home</a>
      <a href="/post/<%= post._id %>/edit" class="btn edit">Edit Post</a>
      <form action="/post/<%= post._id %>?_method=DELETE" method="POST" class="inline-form">
        <button type="submit" class="btn delete" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
      </form>
    </div>
      <!-- <a href="/" class="btn back">Back to Home</a> -->
  </article>

<%- include('partials/footer') %>